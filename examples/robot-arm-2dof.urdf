<?xml version="1.0"?>
<robot name="robot_arm_2dof">
  <!-- Base link - fixed to ground -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
      <origin xyz="0.05 0.05 0.025" rpy="0 0 0"/>
      <material name="steel">
        <color rgba="0.5 0.5 0.55 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
      <origin xyz="0.05 0.05 0.025" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Link 1 - first arm segment -->
  <link name="link1">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.15"/>
      </geometry>
      <origin xyz="0.015 0.015 0.075" rpy="0 0 0"/>
      <material name="aluminum">
        <color rgba="0.91 0.92 0.93 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.03 0.03 0.15"/>
      </geometry>
      <origin xyz="0.015 0.015 0.075" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- Link 2 - second arm segment -->
  <link name="link2">
    <visual>
      <geometry>
        <box size="0.025 0.025 0.12"/>
      </geometry>
      <origin xyz="0.0125 0.0125 0.06" rpy="0 0 0"/>
      <material name="aluminum">
        <color rgba="0.91 0.92 0.93 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.025 0.025 0.12"/>
      </geometry>
      <origin xyz="0.0125 0.0125 0.06" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.7"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- End effector -->
  <link name="end_effector">
    <visual>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <material name="plastic">
        <color rgba="0.2 0.6 0.9 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Shoulder joint - rotates around Y axis -->
  <joint name="shoulder" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0.05 0.05 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="100" velocity="2"/>
  </joint>

  <!-- Elbow joint - rotates around Y axis -->
  <joint name="elbow" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.015 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.356" upper="2.356" effort="50" velocity="2"/>
  </joint>

  <!-- Wrist joint - fixed attachment to end effector -->
  <joint name="wrist" type="fixed">
    <parent link="link2"/>
    <child link="end_effector"/>
    <origin xyz="0.0125 0 0.12" rpy="0 0 0"/>
  </joint>
</robot>
